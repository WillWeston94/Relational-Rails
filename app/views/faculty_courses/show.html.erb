<p><a href="/faculties">Our Faculty</a></p>
<p><a href="/courses">Our Courses</a></p>
<p><a href="<%= new_course_path(faculty_id: @faculty.id) %>">New Course</a></p>
<a href="/faculties/<%= @faculty.id %>/courses?sort=true">Alphabetical Sort</a>

<%= form_tag filter_faculty_courses_path(@faculty), method: :get do %>
    <%= label_tag 'threshold', 'Return classes with credits worth more than:' %>
    <%= text_field_tag 'threshold' %>
    <%= submit_tag 'Filter' %>
<% end %>

<hr>

<% @courses.each do |course| %>
<hr>
<p><a href="/courses/<%= @faculty.id %>/edit">Update Course</a></p>
<p><%= course.course_name %></p>
<p><strong>Professor:</strong> <%= course.professor %></p>
<p><strong>General Education Course:</strong> <%= course.gen_ed %></p>
<p><strong>Credits:</strong> <%= course.credits %></p>
<p><strong>Class Start Date:</strong> <%= course.start_date %></p>
<p><strong>Class End Date:</strong> <%= course.end_date %></p>
<% end %>
